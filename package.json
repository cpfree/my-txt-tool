{
   "name": "my-txt-tool",
   "displayName": "my-txt-tool",
   "description": "Used for various processing of text",
   "version": "0.2.1",
   "publisher": "cpf",
   "repository": "git@github.com:cpfree/my-txt-tool.git",
   "engines": {
      "vscode": "^1.63.0"
   },
   "categories": [
      "Other"
   ],
   "activationEvents": [
      "onCommand:myTxtTool.combineLine",
      "onCommand:myTxtTool.wrapLine",
      "onCommand:myTxtTool.suitRow",
      "onCommand:myTxtTool.formatAll",
      "onCommand:myTxtTool.customTxtActions"
   ],
   "main": "./out/extension.js",
   "contributes": {
      "commands": [
         {
            "command": "myTxtTool.customTxtActions",
            "title": "%commands.customTxtActions.description%"
         },
         {
            "command": "myTxtTool.formatAll",
            "title": "txt-tool: format all"
         },
         {
            "command": "myTxtTool.combineLine",
            "title": "txt-tool: combine line"
         },
         {
            "command": "myTxtTool.wrapLine",
            "title": "txt-tool: wrap line"
         },
         {
            "command": "myTxtTool.suitRow",
            "title": "txt-tool: suit row"
         }
      ],
		"submenus": [
			{
				"id": "myTxtTool.editor.context",
				"label": "my-text-tools"
			}
		],
      "menus": {
         "myTxtTool.editor.context": [
            {
               "when": "resourceExtname == .md || resourceExtname == .txt",
               "alt": "markdown.showPreviewToSide",
               "command": "myTxtTool.customTxtActions",
               "group": "myTxtToolGroup"
            },
            {
               "when": "resourceExtname == .md || resourceExtname == .txt",
               "command": "myTxtTool.formatAll",
               "group": "myTxtToolGroup"
            },
            {
               "when": "resourceExtname == .txt && config.mytexttool.enableCombineLine",
               "command": "myTxtTool.combineLine",
               "group": "myTxtToolGroup"
            },
            {
               "when": "resourceExtname == .txt && config.mytexttool.enableWrapLine",
               "command": "myTxtTool.wrapLine",
               "group": "myTxtToolGroup"
            },
            {
               "when": "resourceExtname == .txt && config.mytexttool.enableSuitRow",
               "command": "myTxtTool.suitRow",
               "group": "myTxtToolGroup"
            }
         ],
         "editor/context": [
				{
					"submenu": "myTxtTool.editor.context",
					"group": "myTxtToolGroup"
				}
         ],
         "editor/title": [
            {
               "when": "resourceExtname == .md || resourceExtname == .txt",
               "alt": "markdown.showPreviewToSide",
               "command": "myTxtTool.customTxtActions",
               "group": "myTxtToolGroup"
            },
            {
               "when": "resourceExtname == .md || resourceExtname == .txt",
               "command": "myTxtTool.formatAll",
               "group": "myTxtToolGroup"
            },
            {
               "when": "resourceExtname == .txt && config.mytexttool.enableCombineLine",
               "command": "myTxtTool.combineLine",
               "group": "myTxtToolGroup"
            },
            {
               "when": "resourceExtname == .txt && config.mytexttool.enableWrapLine",
               "command": "myTxtTool.wrapLine",
               "group": "myTxtToolGroup"
            },
            {
               "when": "resourceExtname == .txt && config.mytexttool.enableSuitRow",
               "command": "myTxtTool.suitRow",
               "group": "myTxtToolGroup"
            }
         ]
      },
      "configuration": {
         "type": "object",
         "title": "my text tool",
         "properties": {
            "mytexttool.enableCombineLine": {
               "type": "boolean",
               "default": true,
               "description": "Enable combine line"
            },
            "mytexttool.enableWrapLine": {
               "type": "boolean",
               "default": true,
               "description": "Enable wrap line"
            },
            "mytexttool.enableSuitRow": {
               "type": "boolean",
               "default": true,
               "description": "Enable suit row"
            },
            "mytexttool.formatRowPrefix": {
               "type": "string",
               "enum": [
                  "\r\n   ",
                  "\r\n　　",
                  "   ",
                  "　　"
               ],
               "markdownEnumDescriptions": [
                  "%config.formatRowPrefix.enumDescriptions.threeEnSpaceAndRow%",
                  "%config.formatRowPrefix.enumDescriptions.twoCnSpaceAndRow%",
                  "%config.formatRowPrefix.enumDescriptions.threeEnSpace%",
                  "%config.formatRowPrefix.enumDescriptions.twoCnSpace%"
               ],
               "default": "\r\n   ",
               "description": "%config.formatRowPrefix.description%"
            },
            "mytexttool.actions": {
               "type": "array",
               "items": {
                  "type": "object"
               },
               "description": "%config.customTxtActions.description%",
               "default": [
                  {
                     "enable": true,
                     "label": "replace(\\\\, \\).replace(\\\", \") ",
                     "description": "降级转换字符串",
                     "actions": [
                        {
                           "type": "replace",
                           "expression": "\\\\\\\\",
                           "param1": "\\"
                        },
                        {
                           "type": "replace",
                           "expression": "\\\\\\\"",
                           "param1": "\""
                        }
                     ]
                  },
                  {
                     "enable": true,
                     "label": "matches ipv4",
                     "description": "匹配 ipv4",
                     "actions": [
                        {
                           "type": "matches",
                           "expression": "((25[0-5]|2[0-4]\\d|((1\\d{2})|([1-9]?\\d)))\\.){3}(25[0-5]|2[0-4]\\d|((1\\d{2})|([1-9]?\\d)))",
                           "param1": ""
                        }
                     ]
                  },
                  {
                     "enable": true,
                     "label": "full corner to half corner",
                     "description": "全角字符转换为半角字符(暂时仅限于逗号和句号), ', ' or ',' -> '，'",
                     "actions": [
                        {
                           "type": "replaceString",
                           "expression": "，",
                           "param1": ", "
                        },
                        {
                           "type": "replaceString",
                           "expression": "。",
                           "param1": ". "
                        }
                     ]
                  },
                  {
                     "enable": true,
                     "label": "half corner to full corner",
                     "description": "半角字符转换为全角字符(暂时仅限于逗号和句号), ', ' or ',' -> '，'",
                     "actions": [
                        {
                           "type": "replace",
                           "expression": ", ?",
                           "param1": "，"
                        },
                        {
                           "type": "replace",
                           "expression": "(?<!(\\n|^)\\s*\\d{1,5})\\. ?",
                           "param1": "。"
                        }
                     ]
                  },
                  {
                     "enable": true,
                     "label": "set one space after half corner",
                     "description": "半角字符后面设置为一个空格, 除了行结尾之外 ===> ', ' or ',' -> '，'",
                     "actions": [
                        {
                           "type": "replace",
                           "expression": ", *(?=\\S)",
                           "param1": ", "
                        },
                        {
                           "type": "replace",
                           "expression": "(?<!(\\n|^)\\s*\\d{1,5})\\. *(?=\\S)",
                           "param1": ". "
                        }
                     ]
                  },
                  {
                     "enable": true,
                     "label": "clear space after half corner",
                     "description": "半角字符后面清除空格, 除了行开头的行标记 ===> ', ' or ',' -> '，'",
                     "actions": [
                        {
                           "type": "replace",
                           "expression": ", *",
                           "param1": ","
                        },
                        {
                           "type": "replace",
                           "expression": "(?<!(\\n|^)\\s*\\d{1,4})\\. *",
                           "param1": "."
                        }
                     ]
                  },
                  {
                     "enable": true,
                     "label": "left one space between en and cn",
                     "description": "中英文中间设置空格",
                     "actions": [
                        {
                           "type": "replace",
                           "expression": "((?<=[\u4e00-\u9fa5])\\s*\\b)|(\\b\\s*(?=[\u4e00-\u9fa5]))",
                           "param1": " "
                        }
                     ]
                  },
                  {
                     "enable": true,
                     "label": "insert backquote between en and cn",
                     "description": "中文之间的单个英文前后添加空格和反引号 '`'",
                     "actions": [
                        {
                           "type": "replace",
                           "expression": "(?<=[\u4e00-\u9fa5])\\s*(\\w+)\\s*(?=[\u4e00-\u9fa5])",
                           "param1": " `$1` "
                        }
                     ]
                  }
               ]
            }
         }
      },
      "keybindings": [
         {
            "command": "myTxtTool.customTxtActions",
            "key": "ctrl+shift+I",
            "mac": "ctrl+shift+I",
            "when": "editorTextFocus"
         }
      ]
   },
   "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./",
      "pretest": "npm run compile && npm run lint",
      "lint": "eslint src --ext ts",
      "test": "node ./out/test/runTest.js"
   },
   "devDependencies": {
      "@types/vscode": "^1.63.0",
      "@types/glob": "^7.1.4",
      "@types/mocha": "^9.0.0",
      "@types/node": "14.x",
      "@typescript-eslint/eslint-plugin": "^5.1.0",
      "@typescript-eslint/parser": "^5.1.0",
      "eslint": "^8.1.0",
      "glob": "^7.1.7",
      "mocha": "^9.1.3",
      "typescript": "^4.4.4",
      "@vscode/test-electron": "^1.6.2"
   }
}